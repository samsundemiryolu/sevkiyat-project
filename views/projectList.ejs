<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>Projeler</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .home-button {
      display: inline-block;
      background-color: #4CAF50;
      color: white;
      padding: 10px 15px;
      border-radius: 4px;
      text-decoration: none;
      font-weight: bold;
      margin-right: 10px;
      transition: background-color 0.3s;
    }
    .newprojects-button {
      display: inline-block;
      padding: 10px 15px;
      background-color: #007BFF;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.3s;
      margin-right: 10px;
    }
    .edit-button {
      display: inline-block;
      padding: 0.5rem 1rem;
      background-color: #28a745;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      margin-bottom: 1rem;
    }

  </style>
</head>
<body>
  <h1>Projeler</h1>
  <nav>
    <a href="/index" class="home-button"><i class="fa-solid fa-house"></i> Anasayfa</a> | 
    <a href="/projects/new" class="newprojects-button"><i class="fa-solid fa-plus"></i> Yeni Proje Ekle</a> |
  </nav>
  <table border="1" style="width:100%; text-align:left;">
    <thead>
      <tr>
        <th>Proje Adı</th>
        <th>Proje Türü</th>
        <th>Başlangıç Tarihi</th>
        <th>Bitiş Tarihi</th>
        <th>İşlem</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(function(proj) { %>
        <tr>
          <td><%= proj.projectName %></td>
          <td><%= proj.projectType %></td>
          <td><%= proj.startDate %></td>
          <td><%= proj.endDate || "-" %></td>
          <td><a href="/projects/<%= proj.projectName %>/edit" class="edit-button"><i class="fa-solid fa-pen-to-square"></i>Düzenle</a></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
